/* WRITE A QUERY TO SHOW THE DETAILS
OF EMPLOYEE HAVING SALARY GREATER THAN THE AVERAGE SALARY OF THE DEPARTMENT*/
CREATE TABLE DETAIL (
    EMPNO NUMBER,
    ENAME VARCHAR2(30),
    JOBB VARCHAR2(30),
    SAL NUMBER
);

INSERT INTO DETAIL VALUES (1, 'RAGHU', 'DEVELOPER', 3000);
INSERT INTO DETAIL VALUES (2, 'SONAL', 'MANAGER', 7000);
INSERT INTO DETAIL VALUES (3, 'KARAM', 'ANALYST', 4000);
INSERT INTO DETAIL VALUES (4, 'RUPAM', 'SALESMAN', 1000);

--SELECT * FROM DETAIL;

SELECT * FROM DETAIL WHERE SAL < (SELECT AVG(SAL) FROM DETAIL);
